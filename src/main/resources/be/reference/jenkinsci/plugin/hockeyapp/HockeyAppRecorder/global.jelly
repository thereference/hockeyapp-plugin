<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <!-- nothing to configure -->
  <f:section title="HockeyApp">
    <f:entry title="HockeyApp API Tokens" description="Add HockeyApp API tokens">
      <f:repeatable var="tokenPair" items="${descriptor.tokenPairs}">
        <table width="100%">
          <f:entry title="Name">
            <f:textbox name="tokenPair.tokenPairName" value="${tokenPair.tokenPairName}" />
          </f:entry>
          <f:entry title="API Token">
            <f:password name="tokenPair.apiToken" value="${tokenPair.apiToken}" />
          </f:entry>
          <f:entry title="">
            <div align="right">
              <f:repeatableDeleteButton />
            </div>
          </f:entry>
        </table>
      </f:repeatable>
    </f:entry>
  </f:section>
</j:jelly>
